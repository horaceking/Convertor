<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/cText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/fText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cText"
        android:layout_below="@+id/cText"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/kText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fText"
        android:layout_below="@+id/fText"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/raText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kText"
        android:layout_below="@+id/kText"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/reText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/raText"
        android:layout_below="@+id/raText"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/inputHintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reText"
        android:layout_below="@+id/reText"
        android:layout_marginTop="56dp"
        android:text="请在需要换算的单位前输入数字"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cText"
        android:layout_toRightOf="@+id/cText"
        android:text="°C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fText"
        android:layout_toRightOf="@+id/fText"
        android:text="°F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/raText"
        android:layout_toRightOf="@+id/kText"
        android:text=" K" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/raText"
        android:layout_toRightOf="@+id/raText"
        android:text="°Ra" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reText"
        android:layout_toRightOf="@+id/reText"
        android:text="°Re" />

</RelativeLayout>